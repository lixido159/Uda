<?xml version="1.0" encoding="utf-8"?>

<com.example.m.calendertwo.customView.GridItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_recycler_item">
    <View
        android:layout_width="@dimen/reveal_size"
        android:layout_height="@dimen/reveal_size"
        android:id="@+id/view_recycler_item"

        android:background="@drawable/circle_background"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/date_recycler_item"
            android:gravity="center_horizontal|bottom"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            tools:text="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/lunar_date_recycler_item"
            android:gravity="center_horizontal|top"
            android:textSize="16sp" />

    </LinearLayout>

</com.example.m.calendertwo.customView.GridItemLayout>
